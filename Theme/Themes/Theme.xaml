<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="Window" x:Key="WindowStyle">
        <Setter Property="Background">
            <Setter.Value>
                <ImageBrush ImageSource="pack://application:,,,/Theme;component/Themes/bel.png"/>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="TextBlock" x:Key="TextBlockStyle">
        <Setter Property="Foreground" Value="#FF050D2E" />
        <Setter Property="Background" Value="#FFE2C8F4"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="TextBlockStyle2">
        <Setter Property="Foreground" Value="#FFB7B7B7" />
        <Setter Property="Background" Value="#FF481268"/>
    </Style>

    <Style TargetType="Button" x:Key="ButtonStyle">
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Background" Value="#FF240A6A"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>

    <Style TargetType="TextBox" x:Key="TextBoxStyle">
        <Setter Property="Background" Value="Wheat"/>
    </Style>
</ResourceDictionary>